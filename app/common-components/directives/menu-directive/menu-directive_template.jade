	img.twitter-icon(src="images/twitter_icon.png")

a.instagram-link(
	ng-href='https://www.instagram.com/morphosisarchitects/'
	target='_blank'
	ng-if='!stateParams.section'
)
	img.instagram-icon(src="images/instagram_icon.png")

a.facebook-link(
	ng-href='http://www.facebook.com/MorphosisArchitectsOfficial'
	target='_blank'
	ng-if='!stateParams.section'
)
	img.facebook-icon(src="images/facebook_icon.png")

//- For desktop, load all at same time
slideshow-directive(
	ng-repeat='section in menuItems.sections'
	section='section.url'
	ng-show='!stateParams.sortingType && stateParams.section === section.url'
  slides='section.slides'
	frame-rate='2000'
)
